/**index.wxss**/

page {
  height: 100%;
}

.flex {
  display: flex;
}

.flex-col {
  flex-direction: column;
}

.container {
  padding: 0;
  height: 100%;
  background: rgba(249, 249, 249, 1);
  justify-content: space-between;
}

.tips {
  padding: 40rpx;
}

.tips-text {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(170, 170, 170, 1);
  line-height: 40rpx;
  text-align: center;
}

.images {
  justify-content: space-between;
  padding-bottom: 60rpx;
}

.origin-img {
  width: 600rpx;
  height: 600rpx;
  margin: 30rpx 8rpx;
}

.show-images {
  justify-content: space-between;
  align-items: center;
}

.show-img1 {
  width: 100rpx;
  height: 100rpx;
}

.show-img2 {
  width: 300rpx;
  height: 200rpx;
}

.show-img3 {
  width: 160rpx;
  height: 90rpx;
}

.btn-group {
  width: 100%;
  height: 200rpx;
  background: rgba(49, 114, 238, 1);
  justify-content: center;
  align-items: center;
}

.btn-img {
  width: 50rpx;
  height: 50rpx;
  margin-right: 10rpx;
}

.btn-text {
  width: 80rpx;
  height: 50rpx;
  margin-left: 10rpx;
  font-size: 36rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  line-height: 50rpx;
  letter-spacing: 4rpx;
}
